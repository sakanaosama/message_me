<h4 class="ui center aligned medium icon header">
    <i class="circular blue rocketchat icon"></i>
    Say Something
</h4>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <%# small feed %>
                <div class="ui feed">
                     <%= render @messages %> 
                </div>
            </div>
            <div class="extra content">
                <%# <form class="ui reply form"> %>
                <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path) do |f| %>
                    <div class="field">
                        <div class="ui blue fluid icon input">
                            <%# <input type="text" placeholder="Enter user..."> %>
                            <%# <i class="bordered inverted orange edit icon"></i> %>
                            <%= f.text_field :body %>
                            <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %>
                        </div>
                    </div>
                <%# </form> %>
                <% end %>
            </div>
        </div>
        <%# feed box%>
    </div>

    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <%# drop down menu %>
                <div class="ui inverted vertical menu">
                    <a class="active item">
                    Home
                    </a> 
                    <a class="item">
                    Messages
                    </a>
                    <a class="item">
                    Friends
                    </a>
                </div>
            
            </div>
        </div>
    </div>
</div>